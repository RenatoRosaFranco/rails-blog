%header
  %nav{class: 'navbar navbar-default navbar-fixed-top'}
    .container-fluid{class: 'container'}
      .navbar-header
        %button{type: 'button', class: 'navbar-toggle collapsed', 'data-toggle': 'collapse', 'data-target': '#bs-example-navbar-collapse-1', 'aria-expanded': 'false'}
          %span{class: 'sr-only'} Toggle navigation
          %span{class: 'icon-bar'}
          %span{class: 'icon-bar'}
          %span{class: 'icon-bar'}
        = link_to 'Renato Franco', root_path, class: 'navbar-brand'

      .collapse{class:'navbar-collapse', id: 'bs-example-navbar-collapse-1'}
        %ul{class: 'nav navbar-nav'}
          %li=link_to 'Home', posts_path
          %li=link_to 'Sobre', ''
          %li=link_to 'Blog', ''
          %li=link_to 'Contato', ''

        = search_form_for(@search, html: {class: 'navbar-form navbar-left'}) do |f|
          .form-group
            .input-group
              = f.text_field :title_cont, class: 'form-control', placeholder: 'Buscar...'
              .input-group-addon
                %i{class: 'glyphicon glyphicon-search'}


        %ul{class: 'nav navbar-nav navbar-right'}
          -if (current_user)
            %li= image_tag('', class: 'avatar')
            %li{class: 'dropdown'}
              %a{href: '#', class: 'dropdown-toggle', 'data-toggle': 'dropdown', role: 'button',
              'aria-haspopup': 'true', 'aria-expanded': 'false'}=current_user.name
              %ul{class: 'dropdown-menu'}
                %li=link_to 'Perfil', user_path(current_user)
                %li=link_to 'Editar Perfil', edit_user_path(current_user)
                %li{role: 'separator', class: 'divider'}
                %li=link_to 'Sair', destroy_user_session_path, method: :delete
